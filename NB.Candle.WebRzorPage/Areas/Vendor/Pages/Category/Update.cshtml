@page
@model NB.Candle.WebRzorPage.Areas.Vendor.Pages.Category.UpdateModel
@{
    Layout = "/Areas/Vendor/Pages/Shared/_VendorLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="bg-white rounded-3 p-2 ">
            <div class="d-flex justify-content-between align-items-center pt-2 pb-2 border-bottom border-light fw-bold small ">
                <div>
                    <span class="small">ویرایش دسته بندی</span>
                </div>
                <a class="btn btn-link text-danger xx-small" asp-page="index">
                    <span class="xx-small">بازگشت</span>
                    <i class="bi bi-chevron-left"></i>
                </a>
            </div>
            <form method="post" class="row pt-2 g-3" enctype="multipart/form-data">
                <input asp-for="Category.ID" hidden />
                <div class="col-12 col-md-6">
                    <div class="form-floating  ">
                        <input type="text" class="form-control direction-rtl" asp-for="Category.Name" placeholder=" ">
                        <label asp-for="Category.Name" class="x-small ms-2"></label>
                        <span asp-validation-for="Category.Name" class="xx-small text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-floating  ">
                        <input type="text" class="form-control direction-rtl" asp-for="Category.Description" placeholder=" ">
                        <label asp-for="Category.Description" class="x-small ms-2"></label>
                        <span asp-validation-for="Category.Description" class="xx-small text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-floating  ">
                        <input type="number" class="form-control direction-rtl" asp-for="Category.Sequence" placeholder=" ">
                        <label asp-for="Category.Sequence" class="x-small ms-2"></label>
                        <span asp-validation-for="Category.Sequence" class="xx-small text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-floating  ">
                        <input class="form-control" type="file" asp-for="Category.Image">
                        <label asp-for="Category.Image" class="x-small ms-2"></label>
                        <span asp-validation-for="Category.Image" class="xx-small text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-floating">
                        <select class="form-select" asp-for="Category.ParentCategoryId" asp-items="Model.CategoryListItems">
                        </select>
                        <label asp-for="Category.ParentCategoryId" class="x-small ms-2"></label>
                    </div>
                    <span asp-validation-for="Category.ParentCategoryId" class="xx-small text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="Category.IsActive" class="x-small ms-2"></label>
                    <input class="direction-rtl" type="checkbox" asp-for="Category.IsActive">
                    <span asp-validation-for="Category.IsActive" class="xx-small text-danger"></span>
                </div>
                <div class="col-12 ">
                    <button class="btn btn-primary x-small ">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>
