@page
@model NB.Candle.WebRzorPage.Pages.ResetPasswordModel
@{
}
<div class="d-flex justify-content-center align-items-center w-100">
    <div class="bg-white rounded-3 p-3 w-100">
        <span class="d-block w-100 border-bottom border-light pb-2 small fw-bold text-start">تغیر رمز عبور</span>
        <form method="post">
            <div class="row pt-3 g-3 border-bottom border-light pb-3">
                <input asp-for="ResetPasswordVM.PhoneNumber"hidden />
                <input asp-for="ResetPasswordVM.Token"hidden />
                <div class="x-small text-danger" asp-validation-summary="ModelOnly">

                </div>
                <div class="form-floating  col-12 col-md-6">
                    <input type="password" class="form-control direction-rtl" asp-for="ResetPasswordVM.Password" placeholder=" ">
                    <label asp-for="ResetPasswordVM.Password" class="x-small ms-2"></label>
                    <span asp-validation-for="ResetPasswordVM.Password" class="xx-small text-danger"></span>
                </div>
                <div class="form-floating  col-12 col-md-6">
                    <input type="password" class="form-control direction-rtl" asp-for="ResetPasswordVM.PasswordReEnter" placeholder=" ">
                    <label asp-for="ResetPasswordVM.PasswordReEnter" class="x-small ms-2"></label>
                    <span asp-validation-for="ResetPasswordVM.PasswordReEnter" class="xx-small text-danger"></span>
                </div>

            </div>
            <div class="mt-3">
                <button class="btn btn-primary x-small" type="submit">
                    تغیر رمز
                </button>
            </div>
        </form>
    </div>

</div>